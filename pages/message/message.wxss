.message{
  width: 100%;
}
.no_message{
  width: 100%;
}
.no_message>image{
    width: 350rpx;
    height:430rpx ; 
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.message_box{
    width: 100%;
}
.notice:nth-child(1){
  width: 100%;
  border-top: 1px #eee solid;
}
.notice{
  width: 100%;
  border-bottom: 1px #eee solid;
}
.notice_echo{
  width: 100%;
  height: 100prx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.notice_img{
  width: 18%;
  height: 120rpx;

}
.notice_img>image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.notice_text{
  width: 64%;
  margin-left: 3%;
}
.notice_text>view{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.notice_text>view:nth-child(1){
  font-size: 30rpx;
  font-weight: bold;
}
.notice_text>view:nth-child(2){
  color: #999999;
  margin-top: 15rpx;
}
.notice_date{
width: 15%;
text-align: right;
color: #929292;
}